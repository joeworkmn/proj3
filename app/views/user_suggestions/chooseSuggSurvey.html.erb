<% if cookies.signed[:authenticated] %>
  <% if cookies.signed[:divChair] %>
    <h2>Create a Survey</h2>
    <font color="red"><h4><%= @notice %> </h4></font>
    <%= form_for :survey, :url => {:controller => "sugg_surveys", :action => "createSurvey"} do |f| %>
      <%= f.label "Title:" %> <%= f.text_field :survey_title %><br /><br />
      <%= f.collection_select :usersuggestion, @usersuggestions, :suggestionid, :suggestion,
      options = {:prompt => "Choose a suggestion for survey"}, :class => "suggestion" %><br /><br />
      <%= f.submit "Submit" %>
    <% end %>
  <% end %>
<% end %>
